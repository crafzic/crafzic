{
  "name": "@crafzic/crafzic-image",
  "private": false,
  "version": "0.0.0-beta-1",
  "description": "dynamically generate image using node-canvas",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --minify terser",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "keywords": [
    "canvas",
    "image",
    "image-generation"
  ],
  "author": "Pasindu P Konghawaththa",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.12.0",
    "prettier": "^3.4.1",
    "terser": "^5.36.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "vitest": "^2.1.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crafzic/crafzic.git"
  },
  "bugs": {
    "url": "https://github.com/crafzic/crafzic/issues"
  },
  "homepage": "https://github.com/crafzic/crafzic#readme"
}
